# NHS Digital Configuration
NHS_ASID=YOUR_ACCREDITED_SYSTEM_ID
NHS_PARTY_KEY=YOUR_PARTY_KEY
NHS_ENVIRONMENT=integration

# NHS Service Endpoints
NHS_PDS_ENDPOINT=https://api.service.nhs.uk/personal-demographics
NHS_SCR_ENDPOINT=https://api.service.nhs.uk/summary-care-record
NHS_EPS_ENDPOINT=https://api.service.nhs.uk/electronic-prescriptions
NHS_MESH_ENDPOINT=https://api.service.nhs.uk/message-exchange
NHS_SDS_ENDPOINT=https://api.service.nhs.uk/spine-directory

# GP Connect
GP_CONNECT_ASID=YOUR_GP_CONNECT_ASID
GP_CONNECT_JWT_KEY=/path/to/jwt-private-key.pem

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nhs_booking
DB_USER=nhs_booking_app
DB_PASSWORD=change_this_password
DB_CA_CERT=/path/to/ca-certificate.pem

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password

# Security
JWT_SECRET=your_jwt_secret_min_32_chars_long
SESSION_SECRET=your_session_secret

# Notifications
NHS_MAIL_HOST=smtp.nhs.net
NHS_MAIL_PORT=587
NHS_MAIL_USER=your-service@nhs.net
NHS_MAIL_PASSWORD=your_nhs_mail_password
NHS_SMS_GATEWAY=https://api.nhs.uk/sms

# Monitoring
GRAFANA_PASSWORD=secure_grafana_password
ELASTIC_PASSWORD=secure_elastic_password

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Backup
BACKUP_LOCATION=/opt/backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
